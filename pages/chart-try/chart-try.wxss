.backg{
  opacity: 0.2;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}

.outcome{
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  border-top-left-radius: 98rpx;
  border-bottom-left-radius:98rpx;
  width: 250rpx;
  position: absolute;
  left: 125rpx;
  top: 40rpx;
}

