<!--pages/logs/details.wxml-->
<view class='head'>
  <view class='head-left'>
    <view class='iconfont-box headimg'>
      <label class='icon'></label>
      <image src="{{icon}}"></image>
    </view>
  </view>  
  <view class='head-right'>
    <view class='headtagname'>
      {{type}}
    </view>
    <view class='headmoney'>
      {{amount}}
    </view>
  </view>
</view>


<view>
  <image style="width:100%;height:100%;" class="backg" src="../logs/8.jpeg"></image>
</view>

<view class='divline'></view>

<view class='detail'>
<view class='detail-item'>
    <view class='detail-item-left'>
      类型
    </view>
    <view class='detail-item-right'>
      {{inORout}}
    </view>
  </view>
  <view class='detail-item'>
    <view class='detail-item-left'>
      金额
    </view>
    <view class='detail-item-right'>
      {{amount}}
    </view>
  </view>
  <view class='detail-item'>
    <view class='detail-item-left'>
      账户
    </view>
    <view class='detail-item-right'>
     {{account}}
    </view>
  </view>
  <view class='detail-item'>
    <view class='detail-item-left'>
      记录时间
    </view>
    <view class='detail-item-right'>
      {{datetime}}
    </view>
  </view>
  <view class='detail-item'>
    <view class='detail-item-left'>
      备注
    </view>
    <view class='detail-item-right'>
      {{remark}}
    </view>
  </view>
</view>

<view class='content btnbox'>
  <view class='btnitem1'>
    <button bindtap="deletewater" class='btnsive' hover-class="btnsive-hover" data-bdetail='{{bdetail}}'>
      删除
    </button>
  </view>
  <view class='btnitem2'>
    <button bindtap="updatewater" class='btnsive' hover-class="btnsive-hover" data-bdetail='{{bdetail}}'>
      编辑
    </button>
  </view>
</view>
